                  <overWriteSnapshots>false</overWriteSnapshots>
                  <overWriteIfNewer>true</overWriteIfNewer>
                  <excludeArtifactIds>datanucleus-appengine,appengine-testing,appengine-api-stubs</excludeArtifactIds>      
                </configuration>
              </execution>
            </executions>
          </plugin>
          
