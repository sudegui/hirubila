                                        warSrcDir=src/main/webapp/
                                        warSrcDirIsOutput=true
                                        ]]>
                                </content>
                        </file>
                </additionalConfig>
                <wtpversion>2.0</wtpversion>
        </configuration>
		</plugin>
		
		
      
		<plugin>
